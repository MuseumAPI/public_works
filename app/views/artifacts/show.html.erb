<div class="artifact">
  <%= link_to image_tag(@artifact.image_url), @artifact.image.url %>
  <h1><%= @artifact.title %></h1>
  <h2>Artist: <%= @artifact.artist %></h2>
</div>

<div class="left">
  <dl class="dl-horizontal">
    <dt>Description</dt>
    <dd><%= display_field @artifact.description %></dd>

    <dt>Date</dt>
    <dd><%= display_field @artifact.date %></dd>

    <dt>Location</dt>
    <dd><%= display_field @artifact.location %></dd>

    <dt>History</dt>
    <dd><%= display_field @artifact.history %></dd>

    <dt>References</dt>
    <dd><%= display_field @artifact.references %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt>
      <%= link_to 'Edit', edit_artifact_path(@artifact), class: 'btn btn-primary' %>
    </dt>
  </dl>
</div>
